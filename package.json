{
  "name": "angular-full-starter",
  "version": "0.0.0",
  "scripts": {
    "build": "ng build --output-hashing=none",
    "build:prod": "npm run build -- --configuration=production",
    "build:client-stat": "cd coient && npm run build:prod -- --stats-json",
    "test": "ng test --watch=false --code-coverage",
    "install:server": "cd server && npm i",
    "install:client": "cd client && npm i",
    "install": "npm run install:server && npm run install:client",
    "prebuild": "ts-node git.version.ts",
    "server:dev": "cd server && npm run start:dev",
    "server:prod": "cd server && npm run start:prod",
    "client:dev": "cd client && npm run start:dev",
    "bundle-report": "cd client && webpack-bundle-analyzer dist/client/stats.json",
    "docs:client": "cd client && npm run docs .",
    "docs:server": "cd server && npm run docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd client && npm run lint && cd ../server npm run lint",
      "pre-push": "cd client && npm run build:prod && cd ../server && npm run build"
    }
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^11.11.1",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333"
  }
}
